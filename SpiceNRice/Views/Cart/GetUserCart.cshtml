@model ShoppingCart
@{
    ViewData["Title"] = "GetUserCart";
}

<div style="width:90%;margin:auto" class="mt-2">
    @if (Model != null && Model.CartDetails != null && Model.CartDetails.Count > 0)
    {
        <h5>My Cart</h5>

        <table class="table table-striped">
            <tr>
                <th>FoodItem</th>
                <th>Image</th>
                <th>Category</th>
                <th>Price(CAD)</th>
                <th>Total Price</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model.CartDetails)
            {
                <tr>
                    <td>@item.FoodItem.FoodItemName</td>
                    <td>
                        @if (string.IsNullOrEmpty(item.FoodItem.Image))
                        {
                            <img src="/images/NoImage.png" style="width:80px;height:100px" />
                        }
                        else
                        {
                            <img src="/images/@item.FoodItem.Image" style="width:80px;height:100px" />
                        }
                    </td>
                    <td>@item.FoodItem.Category.CategoryName</td>
                    <td>@item.FoodItem.Price X @item.Quantity</td>
                    <td>@(item.FoodItem.Price * item.Quantity)</td>
                    <td>
                        <a class="btn btn-info" href="/Cart/AddItem?fooditemId=@item.FoodItemId&&redirect=1">+</a>
                        <a class="btn btn-info" href="/cart/removeitem?fooditemid=@item.FoodItemId">-</a>
                    </td>
                </tr>
            }
        </table>

        <div class="my-2">
            <h5>Total(CAD): </h5>
            @(Model.CartDetails.Select(item => item.FoodItem.Price * item.Quantity).Sum())
        </div>

        <div class="my-2">
            <a class="btn btn-primary" href="/Cart/Checkout">Checkout</a>
        </div>

    }
    else
    {
        <h5>Cart is empty</h5>
    }
</div>

